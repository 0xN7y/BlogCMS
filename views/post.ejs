          <li><a href="/">Home</a></li>
          <li><a href="/logout">Logout</a></li>
          
        </ul>
      </nav>
    </div>
  </header>

  
  <main>
    
    <div class="container">
  <h2>Create a New Post</h2>
  <form class="post-form" action="/post" method="POST">
    <!-- Post Title -->
    <div class="form-group">
      <label for="title">Post Title</label>
      <input type="text" id="title" name="title" placeholder="Enter your post title" required>
    </div>
    <div class="form-group">
      <label for="content">Post Content</label>
      <div id="editor" style="height: 400px;"></div>
      <textarea id="content" name="content" style="display: none;"></textarea>
    </div>

    
    <div class="form-group">
      <label for="tags">Tags</label>
      <div class="tags-input-container">
        <div class="tags" id="tags"></div>
        <input type="text" id="tags-input" placeholder="Add a tag and press Enter">
      </div>
      <input type="hidden" name="tags" id="tags-data">
    </div>

 
    <button type="submit" class="btn">Publish Post</button>
  </form>
</div>


