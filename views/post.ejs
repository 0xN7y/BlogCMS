    }
    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 5px;
    }
    .tag {
      background-color: #007bff;
      color: white;
      padding: 5px 10px;
      border-radius: 10px;
      display: flex;
      align-items: center;
